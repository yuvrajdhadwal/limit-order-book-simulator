{
    "name": "LOB Simulator",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
    ],
    "postCreateCommand": "mkdir -p build && cd build && cmake .. & make",
    "remoteUser": "root"
}
